{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Run Multiple Experiments (2 runs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/run_multiple_experiments.py",
            "args": [
                "--runs", "2",
                "--base-dir", "${workspaceFolder}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Run Multiple Experiments (10 runs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/run_multiple_experiments.py",
            "args": [
                "--runs", "10",
                "--base-dir", "${workspaceFolder}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Statistical Analysis (Including PE)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/statistical_analysis.py",
            "args": [
                "--pattern", "/home/qinxiao/workspace/PE/tsvc_vectorization_results.json,${workspaceFolder}/experiment_run_*/tsvc_vectorization_results.json",
                "--confidence", "0.95",
                "--output", "statistical_analysis_with_PE.md"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Statistical Analysis (Experiments Only)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/statistical_analysis.py",
            "args": [
                "--pattern", "${workspaceFolder}/experiment_run_*/tsvc_vectorization_results.json",
                "--confidence", "0.95",
                "--output", "statistical_analysis_experiments.md"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Check Existing Experiments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/run_multiple_experiments.py",
            "args": [
                "--check-only",
                "--base-dir", "${workspaceFolder}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        }
    ]
}